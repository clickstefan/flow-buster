{
  "name": "rhythm-runner",
  "version": "0.1.0",
  "description": "Musical adventure rhythm runner game",
  "main": "dist/index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "type-check": "tsc --noEmit",
    "capacitor:add": "npx cap add",
    "capacitor:sync": "npx cap sync",
    "capacitor:build": "npm run build && npx cap sync",
    "android:dev": "npm run capacitor:build && npx cap open android",
    "ios:dev": "npm run capacitor:build && npx cap open ios"
  },
  "keywords": [
    "game",
    "rhythm",
    "phaser",
    "music",
    "runner",
    "mobile"
  ],
  "author": "Rhythm Runner Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.5.1",
    "meyda": "^5.6.3",
    "phaser": "^3.70.0",
    "tone": "^14.7.77"
  }
}